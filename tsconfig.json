{
  "compilerOptions": {
    "target": "ES2020",                         // Versión JS objetivo
    "module": "CommonJS",                       // Módulo usado en Node
    "rootDir": "src",                           // Carpeta de entrada
    "outDir": "dist",                           // Carpeta de salida al compilar
    "strict": true,                             // Activa chequeos estrictos
    "esModuleInterop": true,                    // Soporte para importar módulos CommonJS
    "forceConsistentCasingInFileNames": true,   // Asegura consistencia en los nombres de archivo
    "skipLibCheck": true,                       // No chequea los archivos de definición de tipos
    "moduleResolution": "node",                 // Usa resolución de módulos estilo Node
    "resolveJsonModule": true,                  // Permite importar archivos JSON
    "types": ["node", "express"],               // Tipados explícitos
    "noImplicitAny": false                      // (opcional) permite tipos implícitos 'any'
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
